<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itineraryDisplay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItineraryDisplay">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="323dp"
        android:layout_marginRight="323dp"
        android:layout_marginBottom="683dp"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/entertainmentChoice"
        android:layout_width="134dp"
        android:layout_height="45dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:text="insertEntertainment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/educationalChoice" />

    <TextView
        android:id="@+id/educationalChoice"
        android:layout_width="134dp"
        android:layout_height="45dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginBottom="55dp"
        android:text="insertEducational"
        app:layout_constraintBottom_toTopOf="@+id/entertainmentChoice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restaurantChoice" />

    <TextView
        android:id="@+id/entertainmentChoiceView"
        android:layout_width="158dp"
        android:layout_height="47dp"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:text="@string/entertainmentChoiceText"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/entertainmentChoice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/educationalChoiceView" />

    <TextView
        android:id="@+id/educationalChoiceView"
        android:layout_width="158dp"
        android:layout_height="47dp"
        android:layout_marginStart="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginTop="53dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="53dp"
        android:text="@string/educationChoiceText"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/entertainmentChoiceView"
        app:layout_constraintEnd_toStartOf="@+id/educationalChoice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/restuarantChoiceView" />

    <TextView
        android:id="@+id/itineraryTitle"
        android:layout_width="170dp"
        android:layout_height="70dp"
        android:layout_marginStart="136dp"
        android:layout_marginLeft="136dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="105dp"
        android:layout_marginRight="105dp"
        android:layout_marginBottom="21dp"
        android:text="@string/itineraryTitle"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/restuarantChoiceView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/restuarantChoiceView"
        android:layout_width="158dp"
        android:layout_height="47dp"
        android:layout_marginStart="58dp"
        android:layout_marginLeft="58dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="437dp"
        android:text="@string/restaurantChoiceText"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/restaurantChoice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itineraryTitle" />

    <TextView
        android:id="@+id/restaurantChoice"
        android:layout_width="134dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="444dp"
        android:text="insertRestuarant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/restuarantChoiceView"
        app:layout_constraintTop_toBottomOf="@+id/itineraryTitle" />

</android.support.constraint.ConstraintLayout>